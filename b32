#!/usr/bin/env bash
TARGETCPU=i386
TARGETOS=`fpc -iTO | head -n1`
FULLTARGET=$TARGETCPU-$TARGETOS
make distclean OS_TARGET=$TARGETOS CPU_TARGET=$TARGETCPU NOWPOCYCLE=1 "$@" -j "OPT=$OS_HOST_OPT -XP $MYOPT386"
time make all OS_TARGET=$TARGETOS CPU_TARGET=$TARGETCPU NOWPOCYCLE=1 "$@" -j "OPT=$OS_HOST_OPT -XP $MYOPT386"
